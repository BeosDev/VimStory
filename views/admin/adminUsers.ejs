                    <div class="content">
                
                    <div class="container">
                    <a href="/admin/users/add"><button type="button" class="btn btn-outline-secondary"><p style="font-size:30px;margin:auto;">New User</p></button></a>

                    <div class="unit w-2-3"><div class="hero-callout">
            <div id="example_wrapper" class="dataTables_wrapper"><div class="dataTables_length" id="example_length"></div><div id="example_filter" class=           "dataTables_filter"></div>
                  
    <table id="table" class="display nowrap dataTable dtr-inline collapsed" style="width: 100%;" role="grid" aria-describedby="example_info">
        <thead><tr role="row">
            <th>ID</th>
            <th>Username</th>
            <th>Authorization</th>
            <th>Full Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Sex</th>
            <th>Email</th>
            <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 84px;" >Edit</th>
            <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 84px;" >Delete</th>            </tr>
        </thead>
        <tbody>
        <%for(var i=0;i<data.length;i++)
        { %>
            <tr role="row" class="odd"  id ="tr<%=i%>">
            <td id ="td_idtr<%=i%>"><%= data[i].U_ID %></td>
            <td id ="td_nametr<%=i%>"><%= data[i].Username %></td>
            <td id ="td_U_authorizationtr<%=i%>"><%= data[i].U_Authorization === 0 ? "Admin":"Mod"  %></td>
            <td id ="td_U_Fullnametr<%=i%>"><%= data[i].U_FullName  %></td>
            <td id ="td_U_Addresstr<%=i%>"><%= data[i].U_Address %></td>
            <td id ="td_U_Phonetr<%=i%>"><%= data[i].U_Phone %></td>
            <td id ="td_U_Sextr<%=i%>"><%= data[i].U_Sex === 1 ? "Male":"Female" %></td>
            <td id ="td_U_Emailtr<%=i%>"><%= data[i].U_Email %></td>
            <td><a href='/admin/users/update/<%=data[i].U_ID%>' ><i class="fas fa-edit"></a></td>
            <td><a href='/admin/users/delete/<%=data[i].U_ID%>' ><i class="fas fa-trash-alt"></a></td>
            </tr>
        <% } %>
        </tbody></table>
        </div></div>
